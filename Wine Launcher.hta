    <script>
        function runProgram(programPath) {
            var objShell = new ActiveXObject("WScript.Shell");
            objShell.Run('"' + programPath + '"', 1, false);
        }

        function openProgram(programPath, programName) {
            var choice = confirm("Willst du " + programName + " Ã¶ffnen?");
            if (choice) {
                runProgram(programPath);
            }
        }

        function openWebsiteInChrome(url) {
            var objShell = new ActiveXObject("WScript.Shell");
            objShell.Run('chrome.exe "' + url + '"', 1, false);
        }

        function openWebsite(url) {
            var newWindow = window.open(url, "_blank");
            newWindow.focus();
        }

        function closeLauncher() {
            var objShell = new ActiveXObject("WScript.Shell");
            objShell.AppActivate("Launcher");
            objShell.SendKeys("%{F4}");
        }

        function openMultiplePrograms(programPaths, programNames) {
            var paths = programPaths.split(",");
            var names = programNames.split(",");
            for (var i = 0; i < paths.length; i++) {
                openProgram(paths[i], names[i]);
            }
        }
    </script>
